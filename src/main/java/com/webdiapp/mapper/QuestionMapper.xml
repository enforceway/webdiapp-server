<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.webdiapp.mapper.QuestionDAO">
    <!--获得商品信息并分页 -->
    <select id="getList" resultType="Question">
        select
        id,
        question_content as questionContent,
        question_type as questionType,
        creation_timestamp as creationTimestamp,
        creation_user as creationUser,
        creation_username as creationUsername,
        lastupdate_timestamp as lastupdateTimestamp,
        lastupdate_user as lastupdateUser,
        lastupdate_username as lastupdateUsername 
        from question_t limit #{skip},#{size}
    </select>
    <!-- 获得单个商品通过编号 -->
    <select id="getById" parameterType="int" resultType="Question">
        select
        id,name,price,picture from question_t where id=#{id}
    </select>
    <!--获得商品总数 -->
    <select id="getCount" resultType="int">
        select count(*) from question_t
    </select>
    <!--新增加商品 -->
    <insert id="insert" parameterType="Question">
        insert into
        question_t(name,price,picture,sur_name) values(#{name},#{price},#{picture},#{surName});
    </insert>
    <!-- 删除商品 -->
    <delete id="delete">
        delete from question_t where id=#{id}
    </delete>
    <!-- 修改商品 -->
    <update id="update" parameterType="Question">
        update question_t set
        name=#{name},price=#{price},picture=#{picture} where id=#{id}
    </update>
</mapper>